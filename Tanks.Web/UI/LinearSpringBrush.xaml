<UserControl x:Class="Tanks.Web.UI.LinearSpringBrush"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="0"
        Height="0">
    <Canvas 
        >
        <Line x:Name="line" StrokeThickness="3" X1="0" X2="0" Y1="0" Y2="0">
            <Line.Stroke>
                <LinearGradientBrush>
                    <GradientStop Color="#999999" Offset="0"/>
                    <GradientStop Color="#cccccc" Offset=".5"/>
                    <GradientStop Color="#999999" Offset="1"/>
                </LinearGradientBrush>
            </Line.Stroke>
        </Line>
    </Canvas>
</UserControl>
