<UserControl x:Class="Tanks.Web.UI.Cloud"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="200">
    <Canvas>
        <Path Fill="White" Stroke="Black" StrokeThickness="3">
        <Path.Data>
            <PathGeometry>
                <PathGeometry.Figures>
                    <PathFigureCollection>
                        <PathFigure StartPoint="0,200">
                            <PathFigure.Segments>
                                <LineSegment Point="200,200"/>
                                    <ArcSegment Point="180,150" Size="20,20" SweepDirection="Counterclockwise"/>
                                    <ArcSegment Point="150,120" Size="20,20" SweepDirection="Counterclockwise"/>
                                    <ArcSegment Point="100,130" Size="20,20" SweepDirection="Counterclockwise"/>
                                    <ArcSegment Point="50,170" Size="20,20" SweepDirection="Counterclockwise"/>
                                    <ArcSegment Point="0,200" Size="30,10" SweepDirection="Counterclockwise"/>
                                </PathFigure.Segments>
                        </PathFigure>
                    </PathFigureCollection>
                </PathGeometry.Figures>
            </PathGeometry>
        </Path.Data>
            </Path>
    </Canvas>
    
</UserControl>
